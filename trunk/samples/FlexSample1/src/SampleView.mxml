<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100%" height="100%" layout="horizontal">
	
	<fx:Script>
		<![CDATA[
			private function clickHandler(event:MouseEvent):void{
				action.text = event.type + " :: " + event.currentTarget.name;
			}
		]]>
	</fx:Script>
	<mx:VBox width="40%" height="100%">
		<mx:DataGrid id="dataGrid" width="100%" height="100%" dataProvider="{[1,2,3,4,5]}">
			<mx:columns>
				<mx:DataGridColumn headerText="Column 1"/>
			</mx:columns>
		</mx:DataGrid>
		<mx:Label id="action"/>
	</mx:VBox>
	<mx:VBox id="buttonBox" width="60%">
		<mx:Button toolTip="Add" label="Add" id="add_btn" click="clickHandler(event)"/>
		<s:Button toolTip="Delete" label="Delete" click="clickHandler(event)"/>
		<mx:Button toolTip="Reset" icon="@Embed('reload.swf')" click="clickHandler(event)"/>
	</mx:VBox>
</mx:TitleWindow>
